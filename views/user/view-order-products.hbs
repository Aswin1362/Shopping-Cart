<section>
    <div class="container mt-5">

      <div class="row">

        {{#each products}}

        <div class="col-md-3">
          <div class="card" style="width: 10rem;">
            <img src='../images/{{this.products._id}}.jpg' class="card-img-top" alt="..." style="height: 12rem; width:10rem">
            <div class="card-body">
              <h5 class="card-title">{{this.products.Name}}</h5>
              <p class="card-number">Rs.{{this.products.Price}}</p>
              <p class="card-text">Quantity: {{this.quantity}}</p>
              <p class="card-text">{{this.products.Description}}</p>
            </div>
          </div>
        </div>

        {{/each}}

      </div>

    </div>
</section>